<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3,4,5">
    <TableRow>
        <TextView
            android:drawableLeft="@drawable/ic_baseline_add_circle_24"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:id="@+id/txtSTT"
            android:padding="5dp"
            android:text="1"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="120dp"
            android:layout_column="1"
            android:id="@+id/txtHoTen"
            android:padding="10dp"
            android:text="Nhân Viên "
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="100dp"
            android:layout_column="1"
            android:id="@+id/txtBoPhan"
            android:padding="10dp"
            android:text=" Bộ phận"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="100dp"
            android:layout_column="1"
            android:id="@+id/txtChucVu"
            android:padding="10dp"
            android:text="Chức vụ"
            android:textStyle="bold"
            android:gravity="center"/>
        <LinearLayout android:layout_height="40dp"
            android:layout_column="1"
            android:layout_width="50dp"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:layout_gravity="center"
                android:id="@+id/btnSua"
                android:textAllCaps="false"
                android:drawableTop="@drawable/ic_baseline_edit_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"/>
        </LinearLayout>
    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3D54CF" />
    <LinearLayout
        android:id="@+id/linearInfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Địa Chỉ"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center"
                android:padding="10dp"
                android:text=">>>>>>"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Số điện thoại"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSoDienThoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center"
                android:padding="10dp"
                android:text=">>>>>>"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3D54CF" />
</TableLayout>